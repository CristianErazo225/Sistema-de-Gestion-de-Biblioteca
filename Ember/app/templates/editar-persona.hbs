<h1>Editar Persona</h1>

<form {{on 'submit' this.editarPersona}}>
  <label for="nombre">Nombre:</label>
  <input id="nombre" type="text" value={{this.model.nombre}} {{on 'input' this.updateNombre}} />

  <label for="apellido">Apellido:</label>
  <input id="apellido" type="text" value={{this.model.apellido}} {{on 'input' this.updateApellido}} />

  <label for="email">Email:</label>
  <input id="email" type="email" value={{this.model.email}} {{on 'input' this.updateEmail}} />

  <button type="submit">Guardar cambios</button>
</form>
