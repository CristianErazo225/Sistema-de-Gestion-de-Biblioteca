<!-- app/templates/editar-libro.hbs -->
<h1>Editar Libro</h1>
<form {{on "submit" this.actualizarLibro}}>
  <label for="titulo">Título:</label>
  <input type="text" id="titulo" value={{this.libro.titulo}} {{on "input" (fn this.set "titulo")}} required>

  <label for="autor">Autor:</label>
  <input type="text" id="autor" value={{this.libro.autor}} {{on "input" (fn this.set "autor")}} required>

  <label for="anioPublicacion">Año de Publicación:</label>
  <input type="number" id="anioPublicacion" value={{this.libro.anio_publicacion}} {{on "input" (fn this.set "anio_publicacion")}} required>

  <button type="submit">Actualizar</button>
</form>
